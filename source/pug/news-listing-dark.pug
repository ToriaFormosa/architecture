extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | News Listing';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let isDark = true;
	- let currentPage = 3.07; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 3; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4

block header
	include modules/header

block content
	article.article.article--news
		header.article__header
			.container
				h1.article__heading.heading.heading--size-large News

				// Filter projects
				.article__filter.filter
					each item in ['all', 'inspiration', 'decoration', 'plants', 'architecture', 'interior']
						- let filterVal = item === 'all' ? '*' : '.__js_' + item;
						- let activeClass = item === 'all' ? ' filter__item--active' : '';
						button(class="filter__item" + activeClass + ' __js_filter-btn', type="button", data-filter= filterVal)= item
		.article__main.container
			ul.news-listing.row.__js_news-grid
				li.news-listing__item.col-12.col-xl-12.__js_masonry-item.__js_interior
					.card.card--small.card--masonry.card--news
						.card__image
							img(src="img/picture/news/listing/item-1.jpg", srcset="img/picture/news/listing/item-1@2x.jpg", alt="")
						.card__content
							.card__date Jule 03, 2020
							h3.card__heading Discover Interior
							.card__text Projects for many large domestic and foreign corporations, enterprises in many elds such
							.card__bottom
								a.card__link(href= isDark ? URLS.projects.detailDark : URLS.projects.detail)
									| Learn more
									+icon('chevron-right')(width="20", height="20")

