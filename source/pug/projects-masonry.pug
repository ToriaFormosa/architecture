extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Projects Masonry';
	- let isHome = true; //- Если true то логотип не будет ссылкой
	- let isDark = false;
	- let currentPage = 2.03; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 2; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4

block header
	include modules/header

block content
	article.article
		header.article__header
			.container
				h1.article__heading.heading.heading--size-large Projects

				// Filter projects
				.article__filter.filter
					each item in ['all', 'interior', 'architecture', 'building', 'exterior']
						- let filterVal = item === 'all' ? '*' : '.__js_' + item;
						- let activeClass = item === 'all' ? ' filter__item--active' : '';
						button(class="filter__item" + activeClass + ' __js_filter-btn', type="button", data-filter= filterVal)= item
		.article__main.container
			ul.projects-masonry.row.__js_projects-grid
				li.projects-masonry__item.col-12.col-md-6.col-xl-4.__js_masonry-item
