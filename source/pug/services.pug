extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Services';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let isDark = false;
	- let currentPage = 4.04; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 4; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4

block header
	include modules/header

block content
	article.article
		header.article__header
			.container
				h1.article__heading.heading.heading--size-large Services

		.article__main.container
			section.services-list
				- let path = 'img/picture/services-page/';
				each item, index in SERVICES
					- let adCl = index === 1 ? ' service-card--reverse' : '';
					.services-list__item.service-card(class= adCl, data-aos="fade")
						.service-card__inner
							.service-card__left
								.service-card__text Totally focused on tools to enhance and help your content shine. We have created this theme thinking  I was in the past. She was mindful. I was mindless.
							.service-card__right
								img(src= path + item.img + ".jpg", srcset= path + item.img + "@2x.jpg", width="635", height="422", alt="")

								.service-card__detail
									.service-card__tags Architecture
									h2.service-card__heading= item.title
									a.service-card__link(href= isDark ? URLS.pages.singleServicesDark : URLS.pages.singleServices)
											| Learn more
											+icon('chevron-right')(width="20", height="20")
block footer
	include modules/footer
