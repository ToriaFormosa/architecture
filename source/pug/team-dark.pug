extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Team Dark';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let isDark = true;
	- let currentPage = 4.1; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 4; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4

block header
	include modules/header

block content
	article.article
		header.article__header
			.container
				h1.article__heading.heading.heading--size-large Meet our highly <br><span class="color-yellow">professional</span> team

		.article__main.container
			ul.team-list.row
				- let path = 'img/picture/team/';

				each it in ['1', '2', '3', '4', '5', '3', '1', '4', 'submit your resume']
					li.team-list__item.col-12.col-md-6.col-lg-4
						if it.length > 1
							a.card.card--send(href="#")
								.card__send-text= it
						else
							.card.card--team(tabindex="0")
								.card__image
									img(src= path + it + ".jpg", srcset= path + it + "@2x.jpg", width="350", height="530", alt="")
								.card__content
									h3.card__heading Jack WIlshere
									.card__text CEO / Founder
									.card__bottom
										+social('card__social', ['facebook', 'twitter', 'linkedin-original'])

block footer
	include modules/footer
