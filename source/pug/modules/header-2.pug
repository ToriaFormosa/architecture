header.header.header--white.__js_fixed-header
	.header__inner
		// Logo
		+logo(isHome, 'header__logo')

		// Burger
		button.header__menu-toggle.menu-toggle(type="button")
			span.visually-hidden Menu

// Site menu
.mobile-canvas.mobile-canvas--social.__js_mobile-canvas
	button.mobile-canvas__close(type="button")
		+icon('close')(width="24", height="24")
		span.visually-hidden Close menu

	// Lang switcher
	ul.mobile-canvas__lang-switcher.lang-switcher.lang-switcher--menu
		li.lang-switcher__item
			a.lang-switcher__link.lang-switcher__link--current Eng
		li.lang-switcher__item
			a.lang-switcher__link(href="#") Fra
		li.lang-switcher__item
			a.lang-switcher__link(href="#") Ger

	nav.mobile-canvas__nav.navigation
		ul.navigation__list
			//- Для темной темы подставляем другой массив, со ссылками на темные страницы
			- let MENU = isDark ? MAIN_MENU_DARK : MAIN_MENU;
			each item, index in MENU
				if item.currentSection === currentSection && item.currentPage === currentPage
					li.navigation__item.navigation__item--current
						a.navigation__link= item.text
						if item.submenu
							+navigation-dropdown-home(item.submenu)
				else if item.currentSection === currentSection && item.currentPage !== currentPage
					li.navigation__item.navigation__item--current
						a.navigation__link(href= item.url)= item.text
						if item.submenu
							+navigation-dropdown-home(item.submenu)
				else
					li.navigation__item
						a.navigation__link.animsition-link(href= item.url)= item.text
						if item.submenu
							+navigation-dropdown-home(item.submenu)


	.mobile-canvas__bottom
		.mobile-canvas__copy © 2021 <span>Larson.</span> All Rights Reserved. <br>
			| Development by <span>Paul Studio</span>
		+social('mobile-canvas__social', ['facebook', 'twitter', 'google-plus', 'linkedin-original'])


