				// Footer menu
			.footer__column.col-6.col-sm
				ul.footer__column-menu
					each item in FOOTER_MENU_1
						if item.currentPage === currentPage
							li.footer__column-item.footer__column-item--current
								a.footer__column-link= item.text
						else
							li.footer__column-item
								a.footer__column-link.animsition-link(href= item.url)= item.text

