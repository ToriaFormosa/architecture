extends templates/main
block variables
	- let pageTitle = TITLE_PART + ' | Projects Carousel Dark';
	- let isHome = false; //- Если true то логотип не будет ссылкой
	- let isDark = true;
	- let currentPage = 2.12; // Для каждой страницы уникален. Номер смотреть в файле pug/templates/_vars.pug в массивах с пунктами меню
	- let currentSection = 2; // // Для каждой раздела уникален. Home -1, projects - 2, news - 3, pages - 4

block header
	include modules/header

block content
	article.article.article--pb-0
		header.article__header
			.container
				h1.article__heading.heading.heading--size-large Projects
		.article__main.article__main--width-full.container
			.article__projects-carousel.projects-carousel.swiper-container.__js_projects-carousel
				.swiper-wrapper
					a.projects-carousel__item.card.card--carousel.swiper-slide(href= isDark ? URLS.projects.detailDark : URLS.projects.detail)
						.card__image
							img(src="img/picture/projects/carousel/1.jpg", srcset="img/picture/projects/carousel/1@2x.jpg", width="658", height="658", alt="")
						.card__content
							h3.card__heading Interior <br>in Spain
							.card__text Projects for many large domestic and foreign corporations, enterprises in many elds such Projects for many large domestic and foreign corporations, enterprises in many elds such
